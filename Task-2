def chatbot():
    """
    A simple rule-based chatbot that responds to basic greetings.
    """
    print("Chatbot: Hi! I'm a simple chatbot. You can say 'hello', 'how are you', or 'bye'.")

    while True:
        user_input = input("You: ").lower()

        if user_input == "hello":
            print("Chatbot: Hi!")
        elif user_input == "how are you":
            print("Chatbot: I'm fine, thanks!")
        elif user_input == "bye":
            print("Chatbot: Goodbye!")
            break
        else:
            print("Chatbot: I don't understand that. Try 'hello', 'how are you', or 'bye'.")

# Run the chatbot
chatbot()
